{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "firstName": { "type": "string" },
      "lastName": { "type": "string" },
	  "age": { "type": ["integer", "string"] } , 
      "grade": { "type": "string" },
      "email": { "type": "string", "format": "email" },
      "enrolledSubjects": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "required": ["id", "firstName", "lastName", "age", "grade", "email", "enrolledSubjects"]
  }
}
